# -*- mode: conf -*-

[MASTER]
# List of plugins (as comma separated values of python modules names) to load
load-plugins=pylint.extensions.docparams,pylint.extensions.docstyle,pylint.extensions.mccabe


[BASIC]
# Good variable names which should always be accepted, separated by a comma
good-names=
    i,j,k,e,  # Loop control vars
    _,__,___,  # Unused vars
    sq,  # search query
    fn,  # function/lambda
    fh,  # file handle
    ts,  # timestamp
    rx,  # regular
    ex,Run,
    logger,
    config


[MESSAGE CONTROL]
# Disable the message, report, category or checker with the given id(s)
disable=
    C0111,  # Missing docstring
    R0801,  # Indicates that a set of similar lines has been detected among multiple file
    I0011,  # Used when an inline option disables a message or a messages category
    I0012,  # Used when an inline option enables a message or a messages category
    R0903,  # Used when class has too few public methods, so be sure it's really worth it
    W0142,  # Used when a function or method is called using *args or **kwargs to dispatch arguments
    C0199,  # Used when a blank line is found at the beginning of a docstring
    C0330  # Used when there are some mixed tabs and spaces in a module


[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=10

# Maximum number of return / yield for function / method body
max-returns=10


[FORMAT]
# Maximum number of characters on a single line
max-line-length=79

# Maximum number of lines in a module
max-module-lines=1500
